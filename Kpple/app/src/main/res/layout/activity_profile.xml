<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.ProfileActivity"
    android:id="@+id/profile_activity_rel">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/fondoprofile"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="184dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/profile"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/txtNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtDisplayName"
        android:layout_alignLeft="@+id/txtDisplayName"
        android:layout_alignStart="@+id/txtDisplayName"
        android:layout_marginBottom="-75dp"
        android:text="Nick"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="78dp"
        android:text="Los calientitos"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp" />

    <ImageView
        android:id="@+id/img_profile_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgProfile"
        android:layout_marginStart="-90dp"
        android:layout_toEndOf="@+id/txtDisplayName"
        app:srcCompat="@drawable/post"
        android:layout_marginLeft="-90dp"
        android:layout_toRightOf="@+id/txtDisplayName" />

    <ImageView
        android:id="@+id/img_profile_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="101dp"
        app:srcCompat="@drawable/gallery"
        android:layout_alignParentRight="true"
        android:layout_marginRight="101dp" />

    <ImageView
        android:id="@+id/img_profile_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgProfile"
        android:layout_alignEnd="@+id/txtNick"
        app:srcCompat="@drawable/info_profile"
        android:layout_alignRight="@+id/txtNick" />

    <FrameLayout
        android:id="@+id/profile_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">

    </FrameLayout>


</RelativeLayout>